@{
    ViewData["Title"] = "Password Recovery";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/PasswordRecovery.css" />

    <style>
        a,
        button,
        input,
        select,
        h1,
        h2,
        h3,
        h4,
        h5,
        p,
        * {
            margin: 0;
            padding: 0;
            border: none;
            text-decoration: none;
            appearance: none;
            background: none;
        }
    </style>
    <title>Password Recovery</title>
</head>
<body style="background: #def5e5;">
    <div class="password-recovery-page-day">
        <img class="password-recovery-page-day__cloud-1" src="~/images/cloud-10.png" />
        <img class="password-recovery-page-day__cloud-2" src="~/images/cloud-20.png" />

        <a href="ChangePassword">
            <button class="password-recovery-page-day__confirm-code-button" name="button_confirmRecovery" type="button">
                <p>Confirm</p>
            </button>
        </a>


        <div class="password-recovery-page-day__headers">
            <h1>Password Changing</h1>
            <h3>Check your email and enter the 6-digit recovery code</h3>
        </div>

        <svg class="password-recovery-page-day__color-mode-switch"
             width="112"
             height="112"
             viewBox="0 0 112 112"
             fill="none">

            <circle cx="55.915"
                    cy="55.915"
                    r="42.9456"
                    transform="rotate(22.0213 55.915 55.915)"
                    fill="#183D3D" />

            <path fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M43.6879 87.4928C60.7391 94.3892 80.1524 86.1573 87.0489 69.1061C93.9454 52.055 85.7134 32.6416 68.6623 25.7452C64.548 24.0811 60.2962 23.2978 56.1158 23.3067C69.4154 30.7642 75.4117 47.124 69.544 61.6313C63.5017 76.5707 47.0502 84.1759 31.9341 79.467C35.1271 82.8589 39.0864 85.6316 43.6879 87.4928Z"
                  fill="#DEF5E5" />
        </svg>

        <div class="password-recovery-page-day__code-field-container">
            <div>
                <img src="~/images/password-icon0.png" />
                <input type="text" maxlength="6" pattern="[0-9]{6}" name="code" placeholder="Code" />
            </div>
        </div>
    </div>
</body>
</html>